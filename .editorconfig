root = true

# 全てのファイル
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShellファイル
[*.{ps1,psd1,psm1}]
charset = utf-8-bom

# YAMLファイル
[*.yml]
indent_size = 2

# Markdownファイル
[*.md]
trim_trailing_whitespace = false
